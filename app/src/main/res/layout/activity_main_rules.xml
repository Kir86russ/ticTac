<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="316dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ПРАВИЛА ИГРЫ" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="164dp"
            android:layout_weight="1"
            android:text='Выигрывает игрок, который быстрее соперника выстроит вертикальный, горизонтальный или диагональный полный ряд из знаков, соответствующих ему. Игроки ходят по очереди, один за другим. При заполнении всех клеток и отсутствии выигрыша, следует нажать кнопку "RESET", в этом случае результат игры - ничья.' />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="164dp"
            android:layout_weight="1"
            android:text='При выборе режима "против компьютера", игрок автоматически будет играть крестиками. Его задача обыграть коварный искусственный интелект.' />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>